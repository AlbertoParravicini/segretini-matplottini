    "version": "0.2.0",
    "configurations": [
      {
        "name": "python: current file",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false,
      },
      {
          "name":"pytest: current file",
          "type":"python",
          "request":"launch",
          "module":"pytest",
          "cwd": "${fileDirname}",
          "console":"integratedTerminal",
          "justMyCode": false,
          "args": ["${file}"]
      },
    ]
  }
  